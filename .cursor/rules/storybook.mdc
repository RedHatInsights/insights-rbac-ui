expect(groupsApiSpy).toHaveBeenCalledTimes(2);
expect(groupsApiSpy).toHaveBeenNthCalledWith(1, { name: '', limit: '20' });
expect(groupsApiSpy).toHaveBeenNthCalledWith(2, { name: 'filtered', limit: '20' });
